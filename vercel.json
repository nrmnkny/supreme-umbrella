{
    "version": 2,
    "builds": [
      { "src": "package.json", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1.js" }
    ],
    "env": {
      "DB_HOST": "@db_host",
      "DB_USER": "@db_user",
      "DB_PASSWORD": "@db_password",
      "DB_DATABASE": "@db_database",
      "JWT_SECRET": "@jwt_secret",
      "JWT_REFRESH_SECRET": "@jwt_refresh_secret"
    }
  }
  